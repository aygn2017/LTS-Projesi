@model List<HesapKartTurDTO>

<div class="table-responsive">
    <table id="tabloListele" class="table mytable mt-5 align-middle">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tur Adı</th>
                <th scope="col">İşlemler</th>
                <th scope="col"><button id="hesapKartTurEkleModal" class="btn btn-outline-success">Ekle</button></th>
            </tr>
        </thead>
        <tbody id="mytabletbody">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TurID</td>
                    <td>@item.TurAdi</td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-outline-warning btnGuncelle hesapKartTurGuncelleModal">Güncelle</button>
                            <button class="btn btn-outline-danger btnSil hesapKartTurSilModal">Sil</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $('#hesapKartTurEkleModal').click(function () {
        $('#myModal .modal-body').html("<form><div class='form-floating mb-3'><input type='text' class='form-control' id='floatingInput' placeholder=' ' name='TurAdi'><label for='floatingInput'> Hesap Kart Tur Adı </label></div></form>");
        $('#myModal .modal-footer').html("<button type='button' id='hesapKartTurEkle' class='btn btn-outline-success'>Save changes</button>");
        hesapkartturtanimlari.Ekle();
        $('#myModal').modal('show');
    });
    $('.hesapKartTurGuncelleModal').click(function () {
        $('#myModal .modal-body').html("<form><div class='form-floating mb-3'><input type='hidden' name='TurId' value='" + $(this).parents('tr').find('td:eq(0)').text() + "'><input type='text' value='" + $(this).parents('tr').find('td:eq(1)').text() + "' class='form-control' id='floatingInput' placeholder=' ' name='TurAdi'><label for='floatingInput'> Hesap Kart Tur Adı </label></div></form>");
        $('#myModal .modal-footer').html("<button type='button' id='hesapKartTurGuncelle' class='btn btn-outline-success'>Update</button>");
        hesapkartturtanimlari.Guncelle();
        $('#myModal').modal('show');
    });
    $('.hesapKartTurSilModal').click(function () {
        $('#myModal .modal-body').html("<form><div class='form-floating mb-3'><input type='hidden' name='TurId' value='" + $(this).parents('tr').find('td:eq(0)').text() + "'><input type='text' disabled value='" + $(this).parents('tr').find('td:eq(1)').text() + "' class='form-control' id='floatingInput' placeholder=' ' name='TurAdi'><label for='floatingInput'> Hesap Kart Tur Adı </label></div></form>");
        $('#myModal .modal-footer').html("<button type='button' id='hesapKartTurSil' class='btn btn-outline-danger'>Delete</button>");
        hesapkartturtanimlari.Sil();
        $('#myModal').modal('show');
    });
</script>
